<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mdtp_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/view_1_alert_screen" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_alert_screen"
        android:lines="3"
        android:layout_below="@+id/view_1_alert_screen"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/view_2_alert_screen"
        android:layout_below="@id/message_alert_screen" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:checked="false"
        android:id="@+id/rb_milk_type"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorAccentLight"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="40dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_expandable_milk_info"
        android:layout_width="37dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:visibility="invisible"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="26dp"
        app:layout_constraintRight_toRightOf="parent" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:id="@+id/text_expandable_milk_info"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:lines="3"
        android:minLines="3"
        android:maxLines="3"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp" />

</android.support.constraint.ConstraintLayout>
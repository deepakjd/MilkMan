<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mdtp_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        app:layout_heightPercent = "25%"
        android:id="@+id/feature_image_about_screen"
        android:background="@drawable/featureimage_milkman"/>

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent = "5%"
        android:id="@+id/view_1_about_screen"
        android:layout_below="@id/feature_image_about_screen" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version_about_screen"
        android:layout_below="@+id/view_1_about_screen"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent = "5%"
        android:id="@+id/view_2_about_screen"
        android:layout_below="@id/version_about_screen" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_about_screen"
        android:lines="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        android:layout_below="@+id/view_2_about_screen" />

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent = "5%"
        android:id="@+id/view_3_about_screen"
        android:layout_below="@id/description_about_screen" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/developer_about_screen"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:lines="3"
        android:layout_below="@+id/view_3_about_screen" />

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent = "5%"
        android:id="@+id/view_4_about_screen"
        android:layout_below="@id/developer_about_screen" />

    <com.comorinland.milkman.common.babushkatext.BabushkaText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credits_about_screen"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:lines="3"
        android:layout_below="@+id/view_4_about_screen" />

</android.support.percent.PercentRelativeLayout>
